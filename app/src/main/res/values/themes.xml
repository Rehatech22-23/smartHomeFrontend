<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Default Theme -->
    <style name="Theme.LGG_Frontend" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Text color -->
        <item name="textFillColor">@color/text</item>
        <!-- Main accent colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">?attr/textFillColor</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">?attr/textFillColor</item>
        <!-- Background and error colors -->
        <item name="colorBackgroundFloating">@color/background_dark</item>
        <item name="colorOnBackground">@color/background_light</item>
        <item name="colorError">@color/red_accent</item>

        <!-- Fields required to be in theme (dependent on previously defined colorscheme) -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabBackground">?attr/colorOnBackground</item>
        <item name="tabTextColor">?attr/textFillColor</item>
        <item name="tabTextAppearance">?attr/textFillColor</item>
        <item name="tabSelectedTextColor">?attr/textFillColor</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorBackgroundFloating</item>
    </style>

    <style name="SwitchCompatThumbTheme">
        <item name="thumbTint">?attr/textFillColor</item>
    </style>

    <style name="Theme.LGG_Frontend_High_Contrast" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Text color -->
        <item name="textFillColor">@color/text</item>
