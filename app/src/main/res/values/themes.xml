<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Default Theme -->
    <style name="Theme.LGG_Frontend" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Main accent colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background and error colors -->
        <item name="android:colorBackground">@color/background_dark</item> <!-- Please use ?android:attr/colorBackground to reference this -->
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/red_accent</item>


        <!-- Important fields for drawables etc. -->
        <item name="tab_background_drawable">@drawable/tab_background_default_theme</item>
        <!-- Fields required to be in theme (dependent on colorscheme defined above) -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabBackground">?attr/colorSurface</item>
        <item name="tabTextColor">?attr/colorOnSurface</item>
        <item name="tabTextAppearance">?attr/colorOnSurface</item>
        <item name="tabSelectedTextColor">?attr/colorOnSecondary</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
    </style>

    <style name="SwitchCompatThumbTheme">
        <item name="thumbTint">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.LGG_Frontend_High_Contrast_One" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Main accent colors -->
        <item name="colorPrimary">@color/c1_text</item>
        <item name="colorOnPrimary">@color/c1_text</item>
        <item name="colorSecondary">@color/background_dark_c1</item>
        <item name="colorOnSecondary">@color/c1_text</item>
        <!-- Background and error colors -->
        <item name="android:colorBackground">@color/background_dark_c1</item> <!-- Please use ?android:attr/colorBackground to reference this -->
        <item name="colorSurface">@color/background_dark_c1</item>
        <item name="colorOnSurface">@color/c1_text</item>
        <item name="colorError">@color/background_light_c1</item>


        <!-- Important fields for drawables etc. -->
        <item name="tab_background_drawable">@drawable/tab_background_hc_one_theme</item>
        <!-- Fields required to be in theme (dependent on colorscheme defined above) -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="tabBackground">?attr/colorSurface</item>
        <item name="tabTextColor">?attr/colorOnSurface</item>
        <item name="tabTextAppearance">?attr/colorOnSurface</item>
        <item name="tabSelectedTextColor">?attr/colorOnSecondary</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
    </style>
</resources>