<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/createRoutineButton"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:text="▶ Ablauf erstellen"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="25sp" />

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50sp">

                    <LinearLayout
                        android:id="@+id/createRoutineContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/textfieldRoutineName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Ablaufname"
                            android:inputType="textPersonName"
                            android:textColor="?attr/colorOnSurface"
                            android:textColorHint="?attr/colorOnSurface"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Wenn"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:id="@+id/linearLayoutCondition"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="50sp">

                            <Button
                                android:id="@+id/addConditionButton"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/transparent"
                                android:text="+ Hinzufügen, was diesen Ablauf auslösen soll"
                                android:textSize="16sp" />

                            <RadioGroup
                                android:id="@+id/selectTrigger"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/radioButtonTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Zeit"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textSize="20sp" />

                                <RadioButton
                                    android:id="@+id/radioButtonSensor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Sensor"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textSize="20sp" />
                            </RadioGroup>

                            <LinearLayout
                                android:id="@+id/timeLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TimePicker
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Switch
                                    android:id="@+id/switch2"
                                    android:layout_width="match_parent"
                                    android:layout_height="50sp"
                                    android:text="Wiederholen"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textSize="20sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/sensorLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/deviceSelectorCondition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Spinner
                                    android:id="@+id/functionSelectorCondition"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dann"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="24sp" />

                        <LinearLayout
                            android:id="@+id/linearLayoutAction"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="50sp">

                            <Button
                                android:id="@+id/addActionButton"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/transparent"
                                android:text="+ Hinzufügen, was dieser Ablauf tun soll"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

                <Button
                    android:id="@+id/deleteRoutineButton"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:text="▶ Ablauf löschen"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="25sp" />

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/deleteRoutineContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="50sp">

                        <Spinner
                            android:id="@+id/deleteRoutineSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:backgroundTint="?attr/colorOnSurface" />

                        <Button
                            android:id="@+id/deleteRoutineExecButton"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="- Ablauf löschen"
                            android:textSize="16sp" />
                    </LinearLayout>
                </ScrollView>

                <Button
                    android:id="@+id/openButton"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:text="▶ Einstellungen"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="25sp" />

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50sp">

                    <LinearLayout
                        android:id="@+id/setting_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Farbschema"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="20sp" />

                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="15sp">

                                <RadioButton
                                    android:id="@+id/radioButton_default"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="?attr/colorOnPrimary"
                                    android:text="Standard"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textSize="18sp" />

                                <RadioButton
                                    android:id="@+id/radioButton_hc1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="?attr/colorOnPrimary"
                                    android:text="Hoher Kontrast 1"
                                    android:textColor="?attr/colorOnSurface"
                                    android:textSize="18sp" />
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>