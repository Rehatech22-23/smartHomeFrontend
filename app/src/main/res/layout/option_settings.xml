<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/createRoutineButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="▶ Ablauf erstellen"
            android:textColor="?attr/colorOnSurface"
            android:textSize="25sp" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50sp">

            <LinearLayout
                android:id="@+id/createRoutineContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/textfieldRoutineName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:hint="Ablaufname"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wenn"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/linearLayoutCondition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="50sp">

                    <Button
                        android:id="@+id/addConditionButton"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/transparent"
                        android:text="+ Hinzufügen, was diesen Ablauf auslösen soll" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dann"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/linearLayoutAction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="50sp">

                    <Button
                        android:id="@+id/button4"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/transparent"
                        android:text="+ Hinzufügen, was dieser Ablauf tun soll" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/deleteRoutineButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="▶ Ablauf löschen"
            android:textColor="?attr/colorOnSurface"
            android:textSize="25sp" />

        <Button
            android:id="@+id/openButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:text="▶ Einstellungen"
            android:textSize="25sp"
            android:textColor="?attr/colorOnSurface" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50sp">

            <LinearLayout
                android:id="@+id/setting_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Farbschema"
                        android:textSize="20sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="15sp">
                        <RadioButton
                            android:id="@+id/radioButton_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Standard"
                            android:textSize="18sp"
                            android:textColor="?attr/colorOnSurface"
                            android:buttonTint="?attr/colorOnPrimary"/>

                        <RadioButton
                            android:id="@+id/radioButton_hc1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hoher Kontrast 1"
                            android:textSize="18sp"
                            android:textColor="?attr/colorOnSurface"
                            android:buttonTint="?attr/colorOnPrimary"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>